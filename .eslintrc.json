{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "indent": ["error", 4],
        "linebreak-style": 0,
        "max-len": ["error", { "code": 120 }],
        "new-cap": ["error", { "newIsCap": false, "capIsNew": false }]
    }
}